<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Prototipo - Grupos de Investigación</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="css/styles.css"/>
</head>
<body class="container py-4">
  <h1 class="mb-3">Gestión de Grupos de Investigación</h1>

  <div class="row">
    <!-- Sidebar: lista de grupos -->
    <div class="col-md-4">
      <div class="card p-3 mb-3">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Grupos</h5>
          <button id="btnCargar" class="btn btn-sm btn-primary">Cargar Grupos (GET)</button>
        </div>
        <ul id="listaGrupos" class="list-group mt-3"></ul>
      </div>

      <div class="card p-3">
      </div>
    </div>

    <!-- Main: detalle del grupo seleccionado -->
    <div class="col-md-8">
      <div id="detalle" class="card p-3">
        <h3 id="nombreGrupo">Selecciona un grupo</h3>
        <div id="metaGrupo" class="small text-muted mb-2"></div>
        <p id="objetivosGrupo" class="mb-3"></p>

        <div class="mb-3">
          <h5>Docentes del grupo</h5>
          <ul id="listaDocentes" class="list-group"></ul>
        </div>

        <div class="mb-3">
          <h5>Semilleros</h5>
          <div id="semillerosContainer"></div>
        </div>

        <div class="mb-3">
          <h5>Actividades (por semillero)</h5>
          <div id="actividadesContainer" class=""></div>
        </div>
      </div>

      <!-- Formularios: Docente, Estudiante, Actividad -->
      <div class="card p-3 mt-3">
        <h5>Registrar Docente Investigador (POST simulado)</h5>
        <form id="formDocente" class="row g-2">
          <div class="col-md-6">
            <input name="nombre" class="form-control" placeholder="Nombre completo" required />
          </div>
          <div class="col-md-6">
            <input name="formacion" class="form-control" placeholder="Formación académica" required />
          </div>
          <div class="col-md-4">
            <input name="horario" class="form-control" placeholder="Horario de atención (Ej: Lun 2-4pm)" required />
          </div>
          <div class="col-md-4">
            <select id="selectGrupoDoc" name="grupo" class="form-select" required>
              <option value="">Seleccione grupo</option>
            </select>
          </div>
          <div class="col-12 text-end">
            <button class="btn btn-success" type="submit">Registrar docente</button>
          </div>
        </form>
      </div>

    <div class="card p-3 mt-3">
        <h5>Vincular Estudiante a Semillero</h5>
        <form id="formEstudiante" class="row g-2">
            <div class="col-md-4">
                <input name="nombre" class="form-control" placeholder="Nombre completo" required />
            </div>
            <div class="col-md-4">
                <input name="codigo" class="form-control" placeholder="Código de estudiante" required />
            </div>
            <div class="col-md-4">
                <input name="carrera" class="form-control" placeholder="Carrera" required />
            </div>
            <div class="col-12">
                <select id="selectSemEst" name="semillero" class="form-select" required>
                    <option value="">Seleccione semillero</option>
                    <option value="gieam_a">Semillero A (GIEAM)</option>
                    <option value="gieam_b">Semillero B (GIEAM)</option>
                    <option value="comba_comba">Semillero Comba</option>
                    <option value="comba_informa">Semillero Informa</option>
                </select>
            </div>
            <div class="col-12 text-end">
                <button class="btn btn-success" type="submit">Vincular estudiante</button>
            </div>
        </form>
    </div>

      <div class="card p-3 mt-3 mb-5">
        <h5>Agregar Actividad a Semillero</h5>
        <form id="formActividad" class="row g-2">
          <div class="col-md-4">
            <select name="tipo" class="form-select" required>
              <option value="">Tipo (taller, conferencia, evento)</option>
              <option>taller</option>
              <option>conferencia</option>
              <option>evento</option>
            </select>
          </div>
          <div class="col-md-2">
            <input type="date" name="fecha" class="form-control" required />
          </div>
          <div class="col-md-2">
            <input type="time" name="hora" class="form-control" required />
          </div>
          <div class="col-md-2">
            <input type="number" name="limite" min="1" class="form-control" placeholder="Límite" required />
          </div>
          <div class="col-md-6">
            <select id="selectSemActividad" name="semillero" class="form-select" required>
                <option value="">Seleccione semillero</option>
                <option value="gieam_a">Semillero A (GIEAM)</option>
                <option value="gieam_b">Semillero B (GIEAM)</option>
                <option value="comba_comba">Semillero Comba</option>
                <option value="comba_informa">Semillero Informa</option>
                </select>
            </div>
          </div>
          <div class="col-md-6">
            <input name="titulo" class="form-control" placeholder="Título de la actividad" required />
          </div>
          <div class="col-12">
            <textarea name="resumen" class="form-control" placeholder="Resumen" rows="2"></textarea>
          </div>
          <div class="col-12 text-end">
            <button class="btn btn-warning" type="submit">Agregar actividad</button>
          </div>
        </form>
      </div>

    </div>
  </div>

  <script src="js/app.js"></script>
</body>
</html>
